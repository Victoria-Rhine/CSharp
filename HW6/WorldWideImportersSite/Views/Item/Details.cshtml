@model WorldWideImportersSite.Models.ViewModels.ItemDetailsViewModel

<div class="row">
    <div class="col-md-6">
        <h3>Stock Item Details</h3>
        <table>
            <tr>
                <th>Stock Item</th>
                <td>@Html.DisplayFor(model => model.StockItemName)</td>
            </tr>
            <tr>
                <th>Item Size</th>
                <td> @Html.DisplayFor(model => model.Size)</td>
            </tr>
            <tr>
                <th>Retail Price</th>
                <td>@Html.DisplayFor(model => model.RecommendedRetailPrice)</td>
            </tr>
            <tr>
                <th>Weight Per Unit</th>
                <td>@Html.DisplayFor(model => model.TypicalWeightPerUnit)</td>
            </tr>
            <tr>
                <th>Valid From Date</th>
                <td>@Html.DisplayFor(model => model.ValidFrom)</td>
            </tr>
            <tr>
                <th>Country of Origin</th>
                <td> @Html.DisplayFor(model => model.CustomFields)</td>
            </tr>
            <tr>
                <th>Extra Tags</th>
                <td> @Html.DisplayFor(model => model.Tags)</td>
            </tr>
        </table>
    </div>

    <div class="col-md-4">
        <h4>Stock Photo</h4>
        <img src="~/Content/Images/comingsoon.jpg" class="img-fluid" width="250" height="250" />
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <h3>Supplier Profile</h3>
        <table>
            <tr>
                <th>Company</th>
                <td>@Html.DisplayFor(model => model.SupplierName)</td>
            </tr>
            <tr>
                <th>Phone #</th>
                <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
            </tr>
            <tr>
                <th>Fax #</th>
                <td>@Html.DisplayFor(model => model.FaxNumber)</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>@Html.DisplayFor(model => model.WebsiteURL)</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>@Html.DisplayFor(model => model.FullName)</td>
            </tr>
        </table>
    </div>
    <div class="col-md-5">
        <h3>Sales History Summary</h3>
        <table>
            <tr>
                <th>Orders</th>
                <td>@Html.DisplayFor(model => model.Quantity)</td>
            </tr>
            <tr>
                <th>Gross Sales</th>
                <td> @Html.DisplayFor(model => model.GrossSales)</td>
            </tr>
            <tr>
                <th>Gross Profit</th>
                <td>@Html.DisplayFor(model => model.GrossProfit)</td>
            </tr>
        </table>
    </div>
</div>