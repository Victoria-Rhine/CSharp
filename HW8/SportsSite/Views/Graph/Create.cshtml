@model SportsSite.Models.Athlete

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChooseTeam</title>
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>Choose a Team and View Athletes</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                @Html.DropDownList("TID", null, htmlAttributes: new { @class = "boxes" })
                @Html.ValidationMessageFor(model => model.TID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <br /><br /><img src="~/Content/Images/icons5.png" class="img-fluid" width="252" height="250" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="Submit New" class="myButton" /><br>
                @Html.ActionLink("Back to Homepage", "Index", "Home", null, new { @class = "myButton" })
            </div>
        </div>
    }
</body>
</html>

                  

