@model SportsSite.Models.Result

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddRaceResults</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>Add New Event Results</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.RaceTime, new { placeholder = "Recorded Time", @class = "boxes" })
                @Html.ValidationMessageFor(model => model.RaceTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.DropDownList("AID", null, new { @class = "boxes" })
                @Html.ValidationMessageFor(model => model.AID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.DropDownList("EID", null, new { @class = "boxes" })
                @Html.ValidationMessageFor(model => model.EID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.DropDownList("LID", null, new { @class = "boxes" })
                @Html.ValidationMessageFor(model => model.LID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <br /><br /><img src="~/Content/Images/icons3.png" class="img-fluid" width="250" height="250" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="Submit New" class="myButton" /><br>
                @Html.ActionLink("Back to Homepage", "Index", "Home", null, new { @class = "myButton" })
            </div>
        </div>
    }
</body>
</html>

